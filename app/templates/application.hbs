<body>
	<section id="todoapp">
		<header id="header">
			<h1>todos</h1>
			{{input id="new-todo" placeholder="What needs to be done?" type="text" value=newTitle enter="createTodo"}}
		</header>

		{{outlet}}

		{{!-- <section id="main">
			<ul id="todo-list">
				{{#each currentModel as |todo|}}
					{{todo-li todo=todo}}
				{{/each}}
			</ul>

			{{toggle-all todos="currentModel"}}
		</section> --}}

		<footer id="footer">
			<span id="todo-count">
				<strong>{{remaining}}</strong> {{inflection}} left
			</span>
			<ul id="filters">
				<li>
					{{link-to 'All' 'index'}}
				</li>
				<li>
					{{link-to 'Active' 'active'}}
				</li>
				<li>
					{{link-to 'Completed' 'completed'}}
				</li>
			</ul>

			<button id="clear-completed" {{action "clear"}}>
				Clear completed ({{completed}})
			</button>
		</footer>
	</section>

	<footer id="info">
		<p>Double-click to edit a todo</p>
	</footer>
</body>
